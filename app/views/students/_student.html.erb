<tr id="student_<%= student.id %>">
    <td><%= student.first_name %></td>
    <td><%= student.last_name %></td>
    <td><%= student.cohort_id %></td>
    <td><%= student.age %></td>
    <td><%= student.education %></td>
    <td>
        <% if can? :manage, User %>
            <%= link_to 'Edit', edit_student_path(student), remote: true, :class => 'btn btn-sm btn-secondary' %>
            <%= link_to 'Delete', student, remote: true, :method => :delete, data: {confirm: "Delete Student: #{student.first_name} #{student.last_name}"}, :class => 'btn btn-sm btn-danger' %>
        <% end %>
    </td>
</tr>
