<div class="students index">
    <div class="row">
        <div class="students welcome col s12">
            <h3>Students</h3>
            <div class="row">
                <div class="col s6">
                    <p>total number student enrolled</p>
                </div>
                <div class="col s6">
                    <p>new students</p>
                    <p>a student name</p>
                    <p>another student name</p>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="students directory col s12 l8">
            <div class="row">
                <form method="POST" action="/search">
                <div class="input-field col s12">
                    <input name="search" type="text" required>
                </div>
                <input type="submit" style="visibility: hidden;" />
                </form>
            </div>
            <table class="listing" summary="Student list">
                <tr class="header">
                    <th>Last Name</th>
                    <th>First Name</th>
                    <th>Cohort Id</th>
                    <th>Email</th>
                    <th>Phone Number</th>
                </tr>
                <% @students.each do |student| %>
                    <tr>
                        <td><%= student.last_name %></td>
                        <td><%= student.first_name %></td>
                        <td><%= student.cohort_id %></td>
                        <td><%= student.email %></td>
                        <td><%= student.phone_number %></td>
                        <td class="actions">
                            <%= link_to("Show", student_path(student), :class => 'action show') %>
                            <%= link_to("Edit", edit_student_path(student), :class => 'action edit') %>
                            <%= link_to("Delete", delete_student_path(student), :class => 'action delete') %>
                        </td>
                    </tr>
                <% end %>
            </table>
        </div>

        <div class="students new col s12 l4">
            <h4>Create Student</h4>
            <%= form_for(@student) do |f| %>
        
                <%= render(:partial => 'form', :locals => {:f => f}) %>
        
                <div class="form-buttons">
                    <%= f.submit("Create Student") %>
                </div>
            <% end %>
        </div>
    </div>
</div>
