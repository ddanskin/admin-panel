<div class="jumbotron">
    <h2>Courses</h2>
</div>
    <div class="well">
        <% if can? :manage, User %>
            <%= link_to "New Course", new_course_path, remote: true, class: "btn btn-primary" %>
        <% end %>
    </div>
    <div class="new-course"></div>

    <table id class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Title</th>
                <th>Hours</th>
                <th>Instructor Id</th>
            </tr>
        </thead>
        <tbody id="courses">
            <%= render @courses %>
        </tbody>
    </table>

    <%= render 'dialog' %>
