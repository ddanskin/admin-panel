<% if !flash[:notice].blank? %>
    <div class="notice">
        <%= flash[:notice] %>
    </div>
<% end %>

<%= link_to("<< Back to List", courses_path, :class => 'back-link') %>

<div class="courses show">
    <h3>Show Course</h3>

    <table summary="Course detail view">
        <tr>
            <th>Title</th>
            <td><%= @course.title %></td>
        </tr>
        <tr>
            <th>Description</th>
            <td><%= @course.description %></td>
        </tr>
        <tr>
            <th>Number of Hours</th>
            <td><%= @course.hours %></td>
        </tr>
        <tr>
            <th>Instructor Id</th>
            <td><%= @course.employee_id %></td>
        </tr>
    </table>
</div>
