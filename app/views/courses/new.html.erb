<%= link_to("<< Back to List", courses_path, :class =>'back-link') %>
<div class="courses new">
    <h2>Create Course</h2>
    <%= form_for(@course) do |f| %>
        <table summary="Course form fields">
            <tr>
                <th>Title</th>
                <td><%= f.text_field(:title) %></td>
            </tr>
            <tr>
                <th>Description</th>
                <td><%= f.text_field(:description) %></td>
            </tr>
            <tr>
                <th>Hours</th>
                <td><%= f.text_field(:hours) %></td>
            </tr>
            <tr>
                <th>Instructor Id</th>
                <td><%= f.text_field(:employee_id) %></td>
            </tr>
        </table>
        <div class="form-buttons">
            <%= f.submit("Create Course") %>
        </div>
    <% end %>
</div>
