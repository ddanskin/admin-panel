<%= link_to("<< Back to List", courses_path, :class =>'back-link') %>
<div class="course_registration delete">
    <h2>Remove Student</h2>
    <%= bootstrap_form_for(@course_registration, :method => 'delete') do |f| %>
        <p>Are you sure you want to permanently remove this student?</p>
        <p class="reference-name"><%= f.object.student_id %></p>

        <div class="form-buttons">
            <%= f.submit("Remove Student") %>
        </div>
    <% end %>
</div>
