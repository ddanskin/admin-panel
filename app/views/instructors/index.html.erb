<div class="x_content">
    <h3>Instructors</h3>
    <%= link_to("Add new Instructor", new_instructor_path, :class => 'action new') %>

    <table class="table table-striped jambo_table bulk_action" summary="Instructor list">
        <tr class="headings">
            <th>Last Name</th>
            <th>First Name</th>
            <th>Salary</th>
            <th>Age</th>
            <th>Education Level</th>
        </tr>
        <% @instructors.each do |instructor| %>
            <tr>
                <td><%= instructor.last_name %></td>
                <td><%= instructor.first_name %></td>
                <td><%= instructor.salary %></td>
                <td><%= instructor.age %></td>
                <td><%= instructor.education %></td>
                <td class="actions">
                    <% if can? :manage, User %>
                        <%= link_to("Show", instructor_path(instructor), :class => 'action show') %>
                        <%= link_to("Edit", edit_instructor_path(instructor), :class => 'action edit') %>
                        <%= link_to("Delete", delete_instructor_path(instructor), :class => 'action delete') %>
                    <% end %>
                </td>
            </tr>
        <% end %>
    </table>
</div>
