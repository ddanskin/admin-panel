<div class="cohorts show">

    <table summary="Cohort detail view">
        <tr>
            <th>Title</th>
            <td><%= @cohort.title %></td>
        </tr>
        <tr>
            <th>Start Date</th>
            <td><%= @cohort.start_date %></td>
        </tr>
        <tr>
            <th>End Date</th>
            <td><%= @cohort.end_date %></td>
        </tr>
        <tr>
            <th>Instructor Id</th>
            <td><%= @cohort.instructor_id %></td>
        </tr>
    </table>
    <table summary="Cohort roster view">
        <h3>Roster</h3>
        <tr class="headings">
            <th>Students</th>
        </tr>
        <% @roster.each do |student| %>
        <% name ="#{student[:first_name]} #{student[:last_name]}" %>
        <tr>
            <td><%= link_to(name, students_path(student), :class => 'action show') %></td>
            <td><%= link_to("Delete", delete_student_path(student), :class => 'action delete') %></td>
        </tr>
        <% end %>
    </table>

    <%= link_to("Add Student", new_student_path, :class => 'action new') %>
</div>
