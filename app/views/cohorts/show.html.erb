<%= link_to("<< Back to List", cohorts_path, :class => 'back-link') %>

<div class="cohorts show">

    <table summary="Cohort detail view">
        <tr>
            <th>Title</th>
            <td><%= @cohort.title %></td>
        </tr>
        <tr>
            <th>Start Date</th>
            <td><%= @cohort.start_date %></td>
        </tr>
        <tr>
            <th>End Date</th>
            <td><%= @cohort.end_date %></td>
        </tr>
        <tr>
            <th>Instructor Id</th>
            <td><%= @cohort.instructor_id %></td>
        </tr>
    </table>

    <h3>Roster</h3>
    <% @roster.each do |student| %>
        <% name ="#{student[:first_name]} #{student[:last_name]}" %>
        <%= link_to(name, students_path(student), :class => 'action show') %>
        <%= link_to("Delete", delete_student_path(student), :class => 'action delete') %>
    <% end %>
    <%= link_to("Add Student", new_student_path, :class => 'action new') %>
</div>
