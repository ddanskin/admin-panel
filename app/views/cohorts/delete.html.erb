<%= link_to("<< Back to List", cohorts_path, :class =>'back-link') %>
<div class="cohorts delete">
    <h2>Delete Cohort</h2>
    <%= bootstrap_form_for(@cohort, :method => 'delete') do |f| %>
        <p>Are you sure you want to permanently delete this cohort?</p>
        <p class="reference-name"><%= f.object.title %></p>

        <div class="form-buttons">
            <%= f.submit("Delete Cohort") %>
        </div>
    <% end %>
</div>
